<%=@tela%>
<br>


<style>
    <%= render 'partials/css/pdv/check_box'%>
</style>


<div class="panel panel-primary">
  <div class="panel-heading">Gerenicar PDV </div>
   <%@tela.each do |item|%>
              <%@check_agua="checked" if  item['sell_agua']=="on" %>
              <%@check_gas="checked" if  item['sell_gas']=="on" %>


    <form class="form-inline" action="gerenciado" method="post">
      <div class="panel-body">
         <table class="table table-striped">
             <thead>
                 <tr>
                  <td>Saldo Água</td>
                  <td>Saldo Gás</td>
                  <td>Preço da Água</td>
                  <td>Preço do Gás</td>
                </tr>
             </thead>
             <tbody>
                 <tr>
                  <td>
                      <%=item['watercredit']%>
                  </td>
                  <td>
                      <%=item['gascredit']%>
                 </td>
                 <td>
                
                     
                
                      <div class="form-group">
                
                        <input type="number" name="custo_agua" class="form-control" value=<%=item['watercost']%> >
                    </div>
                  </td>
                  <td>
                      <div class="form-group">
                
                        <input type="number" name="custo_gas" class="form-control" value=<%=item['gascost']%> >
                    </div>
                  </td>
                </tr>
             </tbody>
             
         </table>
         
         
          <center>
         <div class="[ form-group ]">
                <input type="checkbox" name="sell_gas" id="gas" autocomplete="off" <%=@check_gas%>  value=<%=item['sell_gas']%> on >
                <div class="[ btn-group ]">
                    <label for="gas" class="[ btn btn-primary ]">
                        <span class="[ glyphicon glyphicon-ok ]"></span>
                        <span> </span>
                    </label>
                    <label for="gas" class="[ btn btn-default active ]">
                        Vender Gás
                    </label>
                </div>
            </div>
        <div class="[ form-group ]">
            <input type="checkbox" name="sell_agua" id="agua" autocomplete="off" <%=@check_agua%> value=<%=item['sell_agua']%> on >
            <div class="[ btn-group ]">
                <label for="agua" class="[ btn btn-primary ]">
                    <span class="[ glyphicon glyphicon-ok ]"></span>
                    <span> </span>
                </label>
                <label for="agua" class="[ btn btn-default active ]">
                   Vender Água
                </label>
            </div>
        </div>
                
                 <div class="form-group">
                <label class="col-xs-3 control-label">Status</label>
                <div class="col-xs-5 selectContainer">
                    <select class="form-control" name="status">
                        <option value=<%=item['STATUS']%>><%=item['STATUS']%></option>
                        <option value="OK">OK</option>
                        <option value="SUSPENDED">Suspenso</option>
                        <option value="REDEFINE">Redefinir senha</option>
                      
                    </select>
                </div>
            </div>

        
        
        
      </div>
       <div class="form-group">
                
               <input type="hidden" name="pdd_id" class="form-control" value=<%=item['_id']%> >
       </div>
        <div class="form-group">
                
               <input type="hidden" name="phonepos" class="form-control" value=<%=item['phonepos']%> >
       </div>
        <div class="form-group">
                
               <input type="hidden" name="credito_gas" class="form-control" value=<%=item['gascredit']%> >
       </div>
        <div class="form-group">
                
               <input type="hidden" name="credito_agua" class="form-control" value=<%=item['watercredit']%> >
       </div>
        
        </center>
        
       
          
         
         
       
      <div class="panel-footer">
          <center>
              <button type="submit" class="btn btn-primary">Atualizar</button>
          </center>
      </div>
          
    </form>
   <%end%>
</div>




   
    