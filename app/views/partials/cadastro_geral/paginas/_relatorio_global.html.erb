



<script>
function cont(){
var conteudo = document.getElementById('print').innerHTML,
tela_impressao = window.open('about:blank');
tela_impressao.document.write(conteudo);
tela_impressao.window.print();
tela_impressao.window.close();

}
</script>

 <style>
                    .mygrid-wrapper-div {
                        overflow: scroll;
                        height:300px;
                    }
                </style>








<br>
<center>
    <div id="print" class="conteudo">
    <div class="panel panel-primary">
         <div class="panel-heading">
            <h3 class="panel-title">Relatorio Detalhado de venda de <%=@contexto_produto%></h3>
         </div>
         <div class="panel-body">
             <div class="mygrid-wrapper-div" id="relatorio">
            <table class="table table-striped">
                <thead>
                     <tr>
                        
                        <td>Telefone</td>
                        <td>Data</td>
                        <td>Custo real</td>
                        <td>Custo de venda</td>
                        <td>Registro de operação</td>
                       
                     </tr>
                </thead>
               
          
              
                <%@tela.each do |item|%>
                 
                
                <tbody>
                   
                     <tr>
                        <td><%=item['phone']%></td>
                        <td><%= @calendario.timestamp_to_data(item['timestamp'])%></td>
                        <td><%=item['preco']%></td>
                        <td><%=item['face']%></td>
                        <td><%=item['_id']%></td>
                      </tr>
                     
                <%end%>
              
                </tbody>
                </table>
            
                
          </div>
              
                
                <table class="table table-striped">
                <thead>
                     <tr>
                        <td>Soma dos custos reais</td>
                        <td>Soma dos custos de venda</td>
                        <td>Soma dos lucros das vendas</td>
                     </tr>
                </thead>
                
                <tbody>
                     <tr>
                       
                        <%soma_face=0%>
                        <%soma_preco=0%>
                        <%@tela.each do |pdv|%>
                        <%soma_face=soma_face+pdv['face'].to_f%>
                        <%soma_preco=soma_preco+pdv['preco'].to_f%>
                        <%end%>
                        
                        <td><%=soma_preco%></td>
                        <td><%=soma_face%></td>
                        <td><%=soma_face-soma_preco%></td>
                       
                      </tr>
               
                </tbody>
                
                </table>
 
                
                

        </div>
          <div class="panel-footer">
          <button type="button" class="btn btn-default" onclick="cont()"; aria-label="Left Align">
            <span class="glyphicon glyphicon-print" aria-hidden="true"></span>
          </button>
      </div>
      
                
     </div>
    

    </panel>
    </div>
</center>
