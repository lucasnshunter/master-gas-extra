



<%@tela.each do |pdv|%>



<div class="panel-body">
       <form name="pdv" action="atualizado" method="post">
           <div class="form-group">
               
                <input type="hidden" name="id" value=<%=pdv['_id']%>>
            </div>
           <!--dados de cadastro 3-->
         
<div class="form-group">
                <label for="exampleInputPassword1">Nome fantasia</label>
                <input type="text" name="fantname" value="<%=pdv['nomefantasia']%>" class="form-control"  >
            </div>

<div class="form-group">
                <label for="exampleInputPassword1">Nome</label>
                <input type="text" name="name" value="<%=pdv['uname']%>" class="form-control"  >
            </div>

<div class="form-group">
                <label for="exampleInputPassword1"> CPF/CNPJ</label>
                <input type="number" name="cpf_cnpj" value="<%=pdv['CPF']%>" class="form-control"  >
            </div>
            <!--dados do negocio 3-->

           
<div class="form-group">
                <label for="exampleInputPassword1">DDD</label>
                <input type="number" name="ddd" class="form-control" value="<%=pdv['defaultddd']%>" >
            </div>

<div class="form-group">
                <label for="exampleInputPassword1">Telefone</label>
                <input type="number" name="phone" class="form-control" value="<%=pdv['phone']%>" >
            </div>

<div class="form-group">
                <label for="exampleInputPassword1">Email</label>
                <input type="text" name="email" class="form-control" value="<%=pdv['email']%>" >
            </div>
            <!--dados de localização 6-->
            

             <div class="form-group">
                <label for="exampleInputPassword1">CEP</label>
                <input type="number" name="adcep" class="form-control" value="<%=pdv['CEP']%>" >
            </div>

<div class="form-group">
                <label for="exampleInputPassword1">Endereço</label>
                <input type="text" name="addr" class="form-control" value="<%=pdv['address']%>" >
            </div>

 <div class="form-group">
                <label for="exampleInputPassword1">Logradouro</label>
                <input type="text" name="logr" class="form-control" value="<%=pdv['logradouro']%>" >
            </div>

 
             <div class="form-group">
                <label for="exampleInputPassword1">Bairro</label>
                <input type="text" name="bairro" class="form-control" value="<%=pdv['bairro']%>">
            </div>

 
            

 <div class="form-group">
                <label for="exampleInputPassword1">Cidade</label>
                <input type="text" name="adcit" class="form-control" value="<%=pdv['city']%>" >
            </div>
 <div class="form-group">
             <label for="exampleInputPassword1">Estado</label>
             <input name="uf" type="text" id="uf"  class="form-control" value="<%=pdv['UF']%>"/>
             </div>
             
           
            <button type="submit" class="btn btn-primary">Subimeter</button>
        </form>
    </div>
<%end%>